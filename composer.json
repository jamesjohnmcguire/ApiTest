{
    "name": "digitalzenworks/api-test",
	"description": "A library for end to end testing web APIs with PHPUnit.",
	"homepage": "https://github.com/jamesjohnmcguire/ApiTest/",
	"keywords": ["API Tester", "End to End"],
	"license": "MIT",
	"minimum-stability": "dev",
	"prefer-stable": true,
	"type": "library",
	"authors": [
		{
			"name": "James John McGuire",
			"email": "jamesjohnmcguire@gmail.com"
		}
	],
	"funding":
	[
		{
			"type": "github",
			"url": "https://github.com/sponsors/jamesjohnmcguire"
		}
	],
	"autoload": {
		"psr-4": {
			"DigitalZenWorks\\ApiTest\\": "SourceCode/"
		}
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"phpstan/extension-installer": true
		},
		"process-timeout": 0
	},
	"require":
	{
		"php": "^7.4 || ^8.0",
		"php-http/guzzle7-adapter": "^1.0",
		"phpunit/phpunit": "^11.0 || ^12.0 || ^13.0"
	},
	"require-dev": {
		"dealerdirect/phpcodesniffer-composer-installer": "*",
		"php-parallel-lint/php-console-highlighter": "^1.0",
		"php-parallel-lint/php-parallel-lint": "^1.2.0",
		"phpcompatibility/php-compatibility": "*",
		"phpcsstandards/phpcsdevtools": "^1.0",
		"phpcsstandards/phpcsextra": "^1.2.0",
		"phpmd/phpmd": "^2.15",
		"phpstan/extension-installer": "^1.4",
		"phpstan/phpstan": "^2.1",
		"phpstan/phpstan-deprecation-rules": "^2.0",
		"roave/security-advisories": "dev-master",
		"squizlabs/php_codesniffer": "*"
	},
	"scripts": {
		"test": "vendor/bin/phpunit --configuration Tests/phpunit.xml"
	}
}
